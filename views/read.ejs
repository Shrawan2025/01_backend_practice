<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Users</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="min-h-screen w-full bg-zinc-900 text-white px-6 py-10 font-sans">
    <!-- Header -->
    <header class="mb-6 space-y-2">
        <div>
            <a href="/" class="text-blue-400 hover:text-blue-300 text-sm font-medium transition">&larr; Back to Home</a>
        </div>
        <h1 class="text-3xl tracking-tight">All Users</h1>
    </header>

    <main>
        <div class="flex space-x-2 overflow-x-auto py-2">
            <!-- Single User Card -->

            <% if(users.length> 0){ %>
                <% users.forEach(function(e) { %>
                    <div
                        class="flex-shrink-0 group bg-zinc-800 rounded-lg overflow-hidden shadow-md hover:shadow-lg transition duration-300 border border-zinc-700 w-60">
                        <div class="relative w-full h-72 bg-gradient-to-br from-indigo-600 to-purple-600">
                            <img src="<%= e.image %>" alt="" class="w-full h-full object-cover">
                            <div
                                class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-zinc-900/90 to-transparent px-3 py-1">
                                <h3 class="text-md font-semibold tracking-tight">
                                    <%= e.name %>
                                </h3>
                                <h5 class="text-zinc-400 text-xs">
                                    <%= e.email %>
                                </h5>
                            </div>
                        </div>
                        <div class="p-3 flex justify-between items-center text-xs">
                            <a href="/edit/<%= e._id%>" class="text-indigo-400 hover:text-indigo-300 font-medium transition">Edit</a>
                            <a href="/delete/<%= e._id %>" class="text-red-400 hover:text-red-300 font-medium transition">Delete</a>
                        </div>
                    </div>
                    <% }) %>
                        <% } else { %>
                            <p>no cards yet.</p>
                            <% } %>

        </div>
    </main>
</body>

</html>